# Production Environment Variables for SecureNet SOC Platform

# Frontend Environment (Vite)
VITE_API_URL=https://your-backend-domain.com/api
VITE_APP_ENV=production
VITE_APP_NAME=SecureNet SOC Platform
VITE_APP_VERSION=1.0.0

# Backend Environment (Flask)
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-super-secret-key-here
DATABASE_URL=sqlite:///data/securenet.db

# Security Settings
CORS_ORIGINS=https://your-frontend-domain.com
JWT_SECRET_KEY=your-jwt-secret-key
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True

# Optional: External API Keys (for real threat intelligence)
# VIRUSTOTAL_API_KEY=your-virustotal-key
# SHODAN_API_KEY=your-shodan-key
# ALIENVAULT_API_KEY=your-alienvault-key
